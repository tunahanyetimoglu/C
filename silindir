#include <stdio.h>

int main(){


float r,h;

     printf("Silindirin yaricapi(r) degerini giriniz:");
     
     scanf("%f",&r);
     
     printf("Silindirin yukseklik(h) degerini giriniz:");
     
     scanf("%f",&h);
     
     printf("Silindirin alani:%f ve Silindirin hacmi:%f'dir \n",3*2*r*h,3*r*r*h);
     
   
    return 0;
}